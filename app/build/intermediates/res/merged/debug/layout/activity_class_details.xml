<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.assignmentplanner.ClassDetailsActivity" >

    
    <TextView
        android:id="@+id/class_details_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Class Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/class_details_txtSH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/assignment_details_txtName"
        android:layout_alignParentRight="true"
        android:text="# SH"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/class_details_txtMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/class_details_txtName"
        android:text="M"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/LightGrey" />
    
    <TextView
        android:id="@+id/class_details_txtTuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/class_details_txtName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/class_details_txtMonday"
        android:text="T"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/LightGrey" />
    
    <TextView
        android:id="@+id/class_details_txtWednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_details_txtName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/class_details_txtTuesday"
        android:text="W"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/LightGrey" />

    <TextView
        android:id="@+id/class_details_txtThursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_details_txtName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/class_details_txtWednesday"
        android:text="Th"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/LightGrey" />

    <TextView
        android:id="@+id/class_details_txtFriday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_details_txtName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/class_details_txtThursday"
        android:text="F"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/LightGrey" />

    <TextView
        android:id="@+id/class_details_txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/class_details_txtSH"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/class_details_txtAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/class_details_txtMonday"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Assignments"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <View
        android:id="@+id/horizontal_rule"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignBottom="@+id/class_details_txtAssignments"
        android:layout_alignParentLeft="true"
        android:background="#000000" />

    <ListView
        android:id="@+id/class_details_listAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/class_details_txtAssignments"
        android:text="list of assignments" />


</RelativeLayout>